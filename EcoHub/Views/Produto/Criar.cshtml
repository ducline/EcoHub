@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Criar Produto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/EcoHub.css" rel="stylesheet" />
</head>
<body>

    <div class="container py-5">
        <div class="mx-auto p-4 form-container" style="max-width: 480px;">
            <h1 class="mb-4 text-center">Criar Produto</h1>
            <form method="post" action="/produto/criar">
                <div class="mb-3">
                    <label for="designacao" class="form-label">Designação:</label>
                    <input type="text" id="designacao" name="designacao" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="preco_unitario" class="form-label">Preço Unitário:</label>
                    <input type="text" id="preco_unitario" name="preco_unitario" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="estoque_produto" class="form-label">Estoque:</label>
                    <input type="text" id="estoque_produto" name="estoque_produto" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="estado_produto" class="form-label">Estado:</label>
                    <select id="estado_produto" name="estado_produto" class="form-select" required>
                        <option value="0">Disponível</option>
                        <option value="1">Esgotado</option>
                        <option value="2">Arquivado</option>
                    </select>
                </div>
                @* <div class="mb-3">
                    <label for="imagem" class="form-label">Imagem do Produto:</label>
                    <input type="file" id="imagem" name="imagem" class="form-control" accept="image/*" />
                </div> *@
                <div class="d-grid">
                    <button type="submit" class="btn btn-eco">Criar</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
