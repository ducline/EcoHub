@using EcoHub.Models;
@model Produto;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Editar Produto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/EcoHub.css" rel="stylesheet" />
</head>
<body>

    <div class="container py-5">
        <div class="mx-auto p-4 form-container" style="max-width: 480px;">
            <h1 class="mb-4 text-center">Editar Produto</h1>
            <form method="post" action="/produto/editar">
                <input type="hidden" name="id" value="@Model.GuidProduto" />

                <div class="mb-3">
                    <label for="designacao" class="form-label">Designação:</label>
                    <input type="text" id="designacao" name="designacao" value="@Model.designacao" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="preco_unitario" class="form-label">Preço Unitário:</label>
                    <input type="text" id="preco_unitario" name="preco_unitario" value="@Model.preco_unitario" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="estoque" class="form-label">Quantidade:</label>
                    <input type="text" id="estoque" name="estoque" value="@Model.estoque" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="estado_produto" class="form-label">Estado:</label>
                    <select id="estado_produto" name="estado_produto" class="form-select">
                        <option value="0" @(Model.estado_produto == Produto.EstadoProduto.Disponivel ? "selected" : "")>Disponível</option>
                        <option value="1" @(Model.estado_produto == Produto.EstadoProduto.Esgotado ? "selected" : "")>Esgotado</option>
                        <option value="2" @(Model.estado_produto == Produto.EstadoProduto.Arquivado ? "selected" : "")>Arquivado</option>
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-eco">Atualizar</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
