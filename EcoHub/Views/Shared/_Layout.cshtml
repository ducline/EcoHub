<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - EcoHub</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/css/EcoHub.css" rel="stylesheet" />

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow-x: hidden;
        }

        nav.sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100vh;
            background-color: #26392B;
            border-left: 5px solid #8bc34a;
            padding: 20px 15px 60px 20px;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
        }

            nav.sidebar a.btn {
                display: block;
                width: 140px; /* fixed button width */
                margin: 10px auto; /* auto horizontal margin to center horizontally */
                text-align: center;
                font-weight: 600;
                color: #e0f2f1;
                background-color: #388e3c; /* green button bg */
                border: none;
                border-radius: 6px;
                padding: 12px 0;
                box-shadow: 0 2px 5px rgba(0,0,0,0.15);
                transition: background-color 0.3s ease;
            }

                nav.sidebar a.btn:hover,
                nav.sidebar a.btn.active {
                    background-color: #66bb6a; /* lighter green on hover or active */
                    color: #fff;
                    text-decoration: none;
                }

        .sidebar-user-info {
            margin-top: auto; /* pushes this div to the bottom */
            padding: 10px 5px;
            font-size: 0.85rem;
            color: #a4c299; /* lighter greenish text */
            border-top: 1px solid #8bc34a; /* subtle top border to separate */
            text-align: center;
            background-color: #1f3122; /* slightly darker for separation */
            user-select: none;
        }

        .sidebar-header {
            font-size: 1.8rem;
            font-weight: 700;
            color: #a4c299; /* light green */
            text-align: center;
            padding-bottom: 20px;
            border-bottom: 1px solid #8bc34a; /* subtle green border below */
            margin-bottom: 15px;
            user-select: none;
        }


        main.content {
            margin-left: 280px; /* match sidebar width */
            padding: 2rem;
        }
    </style>
</head>
<body>

    <nav class="sidebar">
        <div class="sidebar-header">
            EcoHub
        </div>

        <a href="/Produto/Index" class="btn @(ViewBag.CurrentPage == "Produto" ? "active" : "")">Produtos</a>
        <a href="/Encomenda/Lista" class="btn @(ViewBag.CurrentPage == "Encomenda" ? "active" : "")">Encomendas</a>

        <div class="sidebar-user-info" style="padding-top: 15px; border-top: 1px solid #8bc34a; margin-top: auto; max-width: 100%; overflow: hidden;">
            @if (ViewBag.Usuario?.nivel_acesso == 0)
            {
                <a class="btn btn-success btn-sm w-100" href="/Usuario/Login">Entrar</a>
            }
            else
            {
                <small style="display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    Utilizador: @ViewBag.Usuario.nome<br />
                    Contacto: @ViewBag.Usuario.email
                </small>
                <a class="btn btn-danger btn-sm mt-2 w-100" href="/Usuario/Logout">Sair</a>
            }
        </div>


    </nav>






    <main class="content">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
